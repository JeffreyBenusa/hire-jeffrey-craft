{% set params = {
    entry: false
}|merge(params|default({})) %}

{% if not params.entry is empty %}
    <section class="bg-teal-500">
        <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8 text-gray-dark">
            <h2 class="text-balance text-4xl font-semibold tracking-tight sm:text-5xl">
               {{ params.entry.message }}
            </h2>
            <blockquote class="mt-6 text-lg sm:text-xl font-medium">
                <p class="mb-2">Inspired by {{ params.entry.cite }}:</p>
                <p class="italic text-xl sm:text-2xl font-light">“{{ params.entry.quote }}”</p>
            </blockquote>
        </div>
    </section>
{% endif %}